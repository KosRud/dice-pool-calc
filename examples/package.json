{
  "type": "module",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@types/node": "^20.5.0",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "dice-pool-calc": "^0.0.7"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf -g ./build/* && rimraf -g ./docs/* && rimraf -g ./docs/.*",
    "doc": "typedoc",
    "build": "rimraf -g ./build/* && tsc && tsc-alias && ncp ./package.json ./build/package.json",
    "start": "node ./build/index.js",
    "build:watch": "concurrently --kill-others \"tsc -w\" \"tsc-alias -w\"",
    "doc:watch": "nodemon --exec \"npm run doc\" --watch ./src --ext js,ts",
    "nodemon": "concurrently --kill-others \"npm run build:watch\" \"nodemon ./build/main.js\""
  }
}
